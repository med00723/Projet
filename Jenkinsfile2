
pipeline {

  environment {
    dockerimagename = "med00723/backend"
    dockerImage = ""
    DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
   
  }

  agent any

  stages {

    stage('Checkout Source') {
      steps {
        git 'https://github.com/med00723/Projet.git'
      }
    }

    stage('Build'){
        steps {
            dir('msign/backend'){
                sh 'npm install'
              }
        }
    }
    stage('Test'){
        steps {
            dir('msign/backend'){
                sh 'npm test'
              }
        }
    }


    stage('Build image') {
      steps{
        script {
          dir('msign/backend'){
            sh 'docker build -t med00723/backend:$BUILD_NUMBER .'
            
          }
          
        }
      }
    }


     stage('login to dockerhub') {
            steps{
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('push image to dockerhub') {
            steps{
                sh 'docker push med00723/backend:$BUILD_NUMBER'
            }
        }
  
    
    stage('Deploying App to Kubernetes') {
      steps{
        script {
          sshagent(['k8s']) {
             // some block
                  }
          
          dir('msign/backend'){
            kubernetesDeploy(configs: "back.yaml", kubeconfigId: "k8sconfig")
           }
          
        }
      }
    }
    
       stage('Deploy App on k8s') {
      steps {
            sshagent(['k8s']) {
            sh "scp -o StrictHostKeyChecking=no deployment.yaml root@kubemaster:/home"
            script {
                try{
                    sh "ssh root@kubemaster kubectl create -f ."
                }catch(error){
                    sh "ssh root@kubemaster kubectl create -f ."
            }
}
        }
      
    }
    }


  }

}




