
pipeline {

  environment {
    dockerimagename = "med00723/backend"
    dockerImage = ""
    DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
   
  }

  agent any

  stages {

    stage('Checkout Source') {
      steps {
        git 'https://github.com/med00723/Projet.git'
      }
    }

    stage('Build'){
        steps {
            dir('msign/backend'){
                sh 'npm install'
              }
        }
    }
    stage('Test'){
        steps {
            dir('msign/backend'){
                sh 'npm test'
              }
        }
    }
    stage('sonarqube analysis code'){
        steps {
            dir('msign/backend'){
                sh 'npm run sonar'
              }
        }
    }


    stage('Build image') {
      steps{
        script {
          dir('msign/backend'){
            sh 'docker build -t med00723/backend:$BUILD_NUMBER .'
            
          }
          
        }
      }
    }


     stage('login to dockerhub') {
            steps{
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('push image to dockerhub') {
            steps{
                sh 'docker push med00723/backend:$BUILD_NUMBER'
            }
        }
  
    
    
    
     
    

    


  }
  post {
    always {
      script {
        def pipelineStatus = currentBuild.result
        def emailBody = pipelineStatus == 'SUCCESS' ? "La pipeline CI/CD a été exécutée avec succès." : "La pipeline CI/CD a été exécutée en échec."
        emailext subject: "Rapport d'exécution de la pipeline CI/CD",
                  body: emailBody,
                  to: "medhajalouane@gmail.com",
                  attachLog: true
      }
    }
  }

}




